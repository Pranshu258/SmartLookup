{
    "manifest_version": 2,
    "name": "Smart LookUP",
    "description": "A comprehensive tool to ease your tasks of writing.",
    "version": "0.2",
    "background": {
        "scripts": ["event.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": { 
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png" 
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "contextMenus"
    ]
}
